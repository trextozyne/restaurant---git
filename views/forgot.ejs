<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="../../assets/forgot-reset/forgot-reset.css">

</head>
<body>
<div class="background">
    <div class="container" id="container">
        <% if (information.length > 0 ) { %>
           <span class="message"><%= information %></span>
        <% } %>
        <div class="card">
            <div class="forgot">
                <div class="form">
                    <header>Reset your password</header>
                    <main>
                        <form id="forgot_password_form" action="/user/forgot" method="POST">
                            <div class="input">
                                <label for="forgot_email" id="forgot_email_label">Email</label>
                                <input class="label_pop" type="email" name="email" id="forgot_email">
                            </div>
                            <button id="reset" type="submit">Reset Password</button>
                        </form>
                    </main>
                </div>
                <!--onclick="doReset();"-->
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script type="text/javascript">
    (()=> {
      let messgae =  document.getElementsByClassName('message')[0];

      setTimeout(()=>{
          $(messgae).hide();
      }, 4000)
    })()
</script>
</body>
</html>